# ========================================
# CONFIGURATION DU SITE WORDPRESS
# ========================================

# === DOCKER & PROJET ===
COMPOSE_PROJECT_NAME=mysite
LOCAL_PORT=8088

# === BASE DE DONNÉES ===
DB_ROOT_PASSWORD=root
DB_NAME=wordpress
DB_USER=wp
DB_PASSWORD=wp

# === ADMIN WORDPRESS ===
ADMIN_USER=admin
ADMIN_PASSWORD=admin123
ADMIN_EMAIL=admin@example.com

# === INFORMATIONS DU SITE ===
SITE_NAME=My Site
SITE_TITLE=My Site
SITE_DESCRIPTION=Mon site WordPress
SITE_COPYRIGHT=My Site

# === URLs ===
# URL locale pour le développement
SITE_URL=http://localhost:8088

# URL de production (utilisée par is_production() et les scripts de déploiement)
PROD_URL=https://mysite.com

# Nom du dossier sur le serveur de production (utilisé par bdprod.sh)
FOLDER_NAME=mysite
